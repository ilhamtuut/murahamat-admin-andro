<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="wad.wan.murahamatdistro.DetailBarangActivity"
    android:background="@color/viewBg">

    <!--<android.support.design.widget.AppBarLayout-->
        <!--android:id="@+id/appbar"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:theme="@style/AppTheme.AppBarOverlay">-->
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    <!--</android.support.design.widget.AppBarLayout>-->
    <ScrollView
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">
        <LinearLayout
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/text_id"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <android.support.v7.widget.CardView
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="3dp"
                android:layout_gravity="center"
                card_view:cardCornerRadius="5dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <!--<com.android.volley.toolbox.NetworkImageView-->
                        <!--android:id="@+id/thumbnail"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="160dp"-->
                        <!--android:layout_gravity="center"-->
                        <!--android:scaleType="fitXY"/>-->
                    <ImageView
                        android:id="@+id/thumbnail"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="3dp"
                android:layout_gravity="center"
                card_view:cardCornerRadius="5dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/nama_brg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name Product"
                        android:textStyle="bold"/>
                    <EditText
                        android:id="@+id/text_namabrg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/ukuran"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Size"
                        android:textStyle="bold"/>
                    <EditText
                        android:id="@+id/text_ukuran"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/kategori"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Category"
                        android:textStyle="bold"/>
                    <Spinner
                        android:id="@+id/spin_kategori"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"/>
                    <EditText
                        android:id="@+id/text_kategori"
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:visibility="gone"/>
                    <TextView
                        android:id="@+id/merek"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Merk"
                        android:textStyle="bold"/>
                    <EditText
                        android:id="@+id/text_merek"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/deskripsi"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Description"/>
                    <EditText
                        android:id="@+id/text_deskripsi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="3dp"
                android:layout_gravity="center"
                card_view:cardCornerRadius="5dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/Stock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stock"
                        android:textStyle="bold"/>
                    <EditText
                        android:id="@+id/text_stock"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"/>
                    <TextView
                        android:id="@+id/harga"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price"
                        android:textStyle="bold"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/text1"
                            android:layout_toRightOf="@+id/harga1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:layout_marginBottom="5dp"
                            android:text="Pcs"/>
                        <EditText
                            android:id="@+id/harga1"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:inputType="number"/>
                        <TextView
                            android:id="@+id/text2"
                            android:layout_toRightOf="@+id/harga2"
                            android:layout_below="@+id/text1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:layout_marginBottom="5dp"
                            android:text="Grosir"/>
                        <EditText
                            android:layout_below="@+id/harga1"
                            android:id="@+id/harga2"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:inputType="number"/>
                        <TextView
                            android:id="@+id/text3"
                            android:layout_toRightOf="@+id/harga3"
                            android:layout_below="@+id/text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:layout_marginBottom="6dp"
                            android:text="1 Lusin"/>
                        <EditText
                            android:layout_below="@+id/harga2"
                            android:id="@+id/harga3"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:inputType="number"/>
                        <TextView
                            android:id="@+id/text4"
                            android:layout_toRightOf="@+id/harga4"
                            android:layout_below="@+id/text3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:layout_marginBottom="6dp"
                            android:text="6 Lusin"/>
                        <EditText
                            android:layout_below="@+id/harga3"
                            android:id="@+id/harga4"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:inputType="number"/>
                        <TextView
                            android:id="@+id/text5"
                            android:layout_toRightOf="@+id/harga5"
                            android:layout_below="@+id/text4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:layout_marginBottom="6dp"
                            android:text="10 Lusin"/>
                        <EditText
                            android:layout_below="@+id/harga4"
                            android:id="@+id/harga5"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:inputType="number"/>
                        <TextView
                            android:id="@+id/text6"
                            android:layout_toRightOf="@+id/harga6"
                            android:layout_below="@+id/text5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="Reseller"/>
                        <EditText
                            android:layout_below="@+id/harga5"
                            android:id="@+id/harga6"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:inputType="number"/>
                    </RelativeLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="3dp"
                android:layout_gravity="center"
                card_view:cardCornerRadius="5dp">
                <RelativeLayout
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <Button
                        android:id="@+id/btn_edit"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:text="EDIT"
                        android:layout_marginRight="10dp"
                        android:textColor="#fff"
                        android:background="@color/colorPrimary"/>
                    <Button
                        android:id="@+id/btn_update"
                        android:layout_toRightOf="@+id/btn_edit"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="10dp"
                        android:text="Update"
                        android:textColor="#fff"
                        android:background="@color/colorPrimary"/>
                    <Button
                        android:id="@+id/btn_batal"
                        android:layout_toRightOf="@+id/btn_update"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:text="Batal"
                        android:textColor="#fff"
                        android:background="@color/colorPrimary"/>
                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
