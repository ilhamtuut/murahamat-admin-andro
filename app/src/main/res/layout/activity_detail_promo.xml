<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="wad.wan.murahamatdistro.DetailPromoActivity">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>
    <ScrollView
        android:layout_below="@+id/appbar"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/text_id"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gambar"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"/>
            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:scaleType="fitXY"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/nama_brg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:layout_marginBottom="5dp"/>
                <EditText
                    android:id="@+id/text_namabrg"
                    android:layout_toRightOf="@+id/nama_brg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"/>
                <TextView
                    android:layout_marginBottom="5dp"
                    android:padding="10dp"
                    android:layout_below="@+id/nama_brg"
                    android:id="@+id/promo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Promo"
                    android:textStyle="bold"/>
                <EditText
                    android:layout_below="@+id/text_namabrg"
                    android:id="@+id/text_promo"
                    android:layout_toRightOf="@+id/promo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"/>
                <TextView
                    android:id="@+id/deskripsi"
                    android:layout_below="@+id/promo"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deskripsi"/>
                <EditText
                    android:layout_below="@+id/text_promo"
                    android:id="@+id/text_deskripsi"
                    android:layout_toRightOf="@+id/deskripsi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="15dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <Button
                    android:id="@+id/btn_edit"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:text="EDIT"
                    android:layout_marginRight="10dp"
                    android:textColor="#fff"
                    android:background="@color/colorPrimary"/>
                <Button
                    android:id="@+id/btn_update"
                    android:layout_toRightOf="@+id/btn_edit"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:text="Update"
                    android:textColor="#fff"
                    android:background="@color/colorPrimary"/>
                <Button
                    android:id="@+id/btn_batal"
                    android:layout_toRightOf="@+id/btn_update"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:text="Batal"
                    android:textColor="#fff"
                    android:background="@color/colorPrimary"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
