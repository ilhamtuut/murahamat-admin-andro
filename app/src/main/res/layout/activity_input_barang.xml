<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="wad.wan.murahamatdistro.TestimonialActivity"
    android:background="@color/viewBg">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_below="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ln1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">
                <android.support.v7.widget.CardView
                    android:id="@+id/card1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="3dp"
                    android:layout_gravity="center"
                    card_view:cardCornerRadius="5dp">
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:padding="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:id="@+id/imageView1"
                                android:layout_marginRight="10dp"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/ic_add"/>
                            <ImageView
                                android:id="@+id/imageView2"
                                android:layout_marginRight="10dp"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/ic_add"/>
                            <ImageView
                                android:id="@+id/imageView3"
                                android:layout_marginRight="10dp"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/ic_add"/>
                            <ImageView
                                android:id="@+id/imageView4"
                                android:layout_marginRight="10dp"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/ic_add"/>
                            <ImageView
                                android:id="@+id/imageView5"
                                android:layout_marginRight="10dp"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/ic_add"/>
                            <ImageView
                                android:id="@+id/imageView6"
                                android:layout_marginRight="10dp"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/ic_add"/>
                        </LinearLayout>
                    </HorizontalScrollView>
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln2"
                android:layout_below="@+id/ln1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">
                <android.support.v7.widget.CardView
                    android:id="@+id/card2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="3dp"
                    android:layout_gravity="center"
                    card_view:cardCornerRadius="5dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Name Product"/>
                        <EditText
                            android:singleLine="true"
                            android:inputType="text"
                            android:id="@+id/edittext_namaBarang"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Size"/>
                        <EditText
                            android:id="@+id/edittext_ukuran"
                            android:singleLine="true"
                            android:inputType="text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Category"/>
                        <Spinner
                            android:id="@+id/spin_kategori"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <EditText
                            android:id="@+id/edittext_kategori"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Merk"/>
                        <EditText
                            android:id="@+id/edittext_merek"
                            android:layout_width="match_parent"
                            android:singleLine="true"
                            android:inputType="text"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Description"/>
                        <EditText
                            android:id="@+id/edittext_deskripsi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="5"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln3"
                android:layout_below="@+id/ln2"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="3dp"
                    android:layout_gravity="center"
                    card_view:cardCornerRadius="5dp">
                    <LinearLayout
                        android:padding="10dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Stock"/>
                        <EditText
                            android:id="@+id/edittext_jumlahstock"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:inputType="number"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Price"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/text1"
                                android:layout_toRightOf="@+id/edittext_harga1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:gravity="right"
                                android:layout_marginBottom="5dp"
                                android:text="Pcs"/>
                            <EditText
                                android:id="@+id/edittext_harga1"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:inputType="number"/>
                            <TextView
                                android:id="@+id/text2"
                                android:layout_toRightOf="@+id/edittext_harga2"
                                android:layout_below="@+id/text1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:layout_marginBottom="5dp"
                                android:text="Grosir"/>
                            <EditText
                                android:layout_below="@+id/edittext_harga1"
                                android:id="@+id/edittext_harga2"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:inputType="number"/>
                            <TextView
                                android:id="@+id/text3"
                                android:layout_toRightOf="@+id/edittext_harga3"
                                android:layout_below="@+id/text2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:layout_marginBottom="6dp"
                                android:text="1 Lusin"/>
                            <EditText
                                android:layout_below="@+id/edittext_harga2"
                                android:id="@+id/edittext_harga3"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:inputType="number"/>
                            <TextView
                                android:id="@+id/text4"
                                android:layout_toRightOf="@+id/edittext_harga4"
                                android:layout_below="@+id/text3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:layout_marginBottom="6dp"
                                android:text="6 Lusin"/>
                            <EditText
                                android:layout_below="@+id/edittext_harga3"
                                android:id="@+id/edittext_harga4"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:inputType="number"/>
                            <TextView
                                android:id="@+id/text5"
                                android:layout_toRightOf="@+id/edittext_harga5"
                                android:layout_below="@+id/text4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:layout_marginBottom="6dp"
                                android:text="10 Lusin"/>
                            <EditText
                                android:layout_below="@+id/edittext_harga4"
                                android:id="@+id/edittext_harga5"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:inputType="number"/>
                            <TextView
                                android:id="@+id/text6"
                                android:layout_toRightOf="@+id/edittext_harga6"
                                android:layout_below="@+id/text5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:text="Reseller"/>
                            <EditText
                                android:layout_below="@+id/edittext_harga5"
                                android:id="@+id/edittext_harga6"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:inputType="number"/>
                        </RelativeLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <Button
                    android:id="@+id/btn_simpan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="save"
                    android:layout_marginTop="16dp"
                    android:background="@color/colorPrimary"
                    android:textColor="#FFF"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
